@page "{id}"
@model LatinMedia.Web.Pages.Admin.Orders.OrderDetailsModel
@{
    ViewData["Title"] = "OrderDetails";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
             جزئیات فاکتور 

            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>


            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="col-md-12 col-sm-12 col-xs-12">
          

                <div id="datatable-checkbox_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="col-sm-12">

                            @{
                                int rowCount = 1;
                            }
                            <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action dataTable no-footer" role="grid" aria-describedby="datatable-checkbox_info">
                                <thead>
                                <tr role="row">
                                    <th style="width: 50px;">ردیف</th>
                                    <th style="width: 50px;">شماره فاکتور</th>
                                    <th style="width: 138px;">تصویر دوره</th>
                                    <th style="width: 190px;">عنوان دوره</th>
                                    <th style="width: 230px;">مبلغ دوره</th>
                                    <th style="width: 138px;">تعداد</th>
                                    <th style="width: 160px;">عملیات</th>
                                </tr>
                                </thead>

                                <tbody>

                                    @foreach (var item in Model.OrderDetailsList)
                                    {

                                        <tr role="row" class="odd">
                                            <td>@rowCount</td>
                                            <td>@item.DetailId</td>
                                            <td><img src="/course/thumbnail/@item.Course.CourseImageName" class="img-circle" height="50"/></td>
                                            <td class="sorting_1">@(item.Course.CourseFaTitle + " " + item.Course.CourseLatinTitle)</td>
                                            <td>@item.CoursePrice.ToString("#,0 تومان")</td>
                                            <td>@item.OrderCount</td>

                                            <td>
                                                <a href="/Admin/Orders/DeleteOrder/@item.DetailId" class="btn btn-danger btn-xs">حذف</a>
                                            </td>
                                        </tr>
                                        rowCount++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>






